  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "formatter": {
    "indentStyle": "space"
  },
  "overrides": [
    {
      "include": ["package.json"],
      "json": {
